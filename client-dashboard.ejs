<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventPro - Client Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <style>
        .dashboard-gradient {
            background: linear-gradient(45deg, 
                #FF0000, #1E90FF, #FF69B4
            );
            background-size: 400% 400%;
            animation: rainbow 15s ease infinite;
        }
        @keyframes rainbow { 
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-sky-100 via-purple-100 to-pink-100 min-h-screen">
    <!-- Navigation -->
    <nav class="fixed w-full z-50 bg-white/80 backdrop-blur-md">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a href="index.html" class="text-2xl font-bold bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                    EventPro
                </a>
                <div class="flex items-center space-x-6">
                    <a href="/post_job" class="text-blue-500 hover:text-purple-500 transition-colors">
                        Post Event
                    </a>
                    <a href="/logout" class="bg-gradient-to-r from-blue-500 to-purple-500 hover:from-purple-500 hover:to-pink-500 text-white px-6 py-2 rounded-full transition-all duration-300">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="container mx-auto px-4 pt-24 pb-16">
        <!-- Stats Section -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white/70 backdrop-blur-md rounded-xl p-6 shadow-lg">
                <h3 class="text-lg font-semibold mb-2">Total Events Posted</h3>
                <p class="text-3xl font-bold text-blue-500">0</p>
            </div>
            <div class="bg-white/70 backdrop-blur-md rounded-xl p-6 shadow-lg">
                <h3 class="text-lg font-semibold mb-2">Total Applications</h3>
                <p class="text-3xl font-bold text-green-500">0</p>
            </div>
            <div class="bg-white/70 backdrop-blur-md rounded-xl p-6 shadow-lg">
                <h3 class="text-lg font-semibold mb-2">Active Events</h3>
                <p class="text-3xl font-bold text-purple-500">0</p>
            </div>
        </div>

        <!-- Posted Events -->
        <div class="bg-white/70 backdrop-blur-md rounded-xl p-6 shadow-lg mb-8">
            <h2 class="text-2xl font-bold mb-6">My Posted Events</h2>
            <div id="postedEvents" class="space-y-4">
                <div class="bg-white/50 rounded-lg p-6">
                    <% jobPosts.forEach(e => { %>
                        <div class="flex flex-col md:flex-row justify-between mb-4">
                            <div>
                                <h3 class="text-xl font-semibold"><%= e.eventTitle %></h3>
                                <p class="text-gray-600">Posted on: <%= e.postedAt.toLocaleDateString() %></p>
                            </div>
                            <div class="flex items-center space-x-4">
                                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm"><%= e.status || 'Open' %></span>
                            </div>
                        </div>
                    
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                <p class="text-gray-600">Location: <%= e.eventLocation %></p>
                                <p class="text-gray-600">Duration: <%= e.eventDuration %> hours</p>
                                <p class="text-gray-600">Payment: â‚¹<%= e.paymentBudget %></p>
                            </div>
                            <div>
                                <p class="text-gray-600">Dress Code: <%= e.dressCode %></p>
                                <p class="text-gray-600">Age Range: <%= e.ageRange.minAge %> - <%= e.ageRange.maxAge %> years</p>
                            </div>
                        </div>
                    <% }); %>                    
                </div>
            </div>
        </div>
    </div>

    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
</body>
</html>
