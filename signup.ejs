<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventPro - Sign Up</title>

    <!-- Tailwind CSS (Stable CDN) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- AOS (Animate on Scroll) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

    <style>
        .form-gradient {
            background: linear-gradient(45deg, #FF0000, #1E90FF, #FF69B4);
            background-size: 400% 400%;
            animation: rainbow 15s ease infinite;
        }
        @keyframes rainbow { 
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-sky-100 via-purple-100 to-pink-100 min-h-screen">
    
    <!-- Navbar -->
    <nav class="fixed w-full z-50 bg-white/80 backdrop-blur-md">
        <div class="container mx-auto px-6 py-4 flex justify-between">
            <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                EventPro
            </a>
            <div class="flex items-center space-x-4">
                <a href="/login" class="text-purple-500 hover:text-pink-500">Login</a>
                <span class="text-gray-400">|</span>
                <a href="/" class="text-blue-500 hover:text-purple-500">Back to Home</a>
            </div>
        </div>
    </nav>

    <!-- Sign Up Form -->
    <div class="container mx-auto px-4 pt-24 pb-16">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl overflow-hidden" data-aos="fade-up">
                <div class="form-gradient p-1">
                    <div class="bg-white rounded-2xl p-8">
                        <h2 class="text-3xl font-bold text-center mb-8 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                            Create Your Account
                        </h2>
                        <form id="signupForm" class="space-y-6" action="/signup" method="post">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-gray-700 mb-2">Full Name</label>
                                    <input type="text" name="name" required class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Age</label>
                                    <input type="number" name="age" required min="18" class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Contact Number</label>
                                    <input type="tel" name="phone" required pattern="[0-9]{10}" class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Email Address</label>
                                    <input type="email" name="email" required class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Gender</label>
                                    <select name="gender" required class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                        <option value="" disabled selected>Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Role</label>
                                    <select name="role" required class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200" req>
                                        <option value="" disabled selected>Select Role</option>
                                        <option value="Client">Client</option>
                                        <option value="Worker">Worker</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Password</label>
                                    <input type="password" name="password" id="password" required minlength="6" class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                </div>
                                <div>
                                    <label class="block text-gray-700 mb-2">Confirm Password</label>
                                    <input type="password" id="confirm_password" required class="w-full px-4 py-3 rounded-lg border focus:ring-2 focus:ring-blue-200">
                                    <p id="password-error" class="text-red-500 text-sm hidden">Passwords do not match!</p>
                                </div>
                            </div>

                            <div class="flex items-center space-x-2">
                                <input type="checkbox" required class="w-4 h-4 text-blue-500">
                                <label class="text-gray-700">I agree to the <a href="#" class="text-blue-500">Terms and Conditions</a></label>
                            </div>

                            <button type="submit" class="w-full py-3 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold">
                                Create Account
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Initialize AOS
        AOS.init();

        // Password validation
        document.getElementById("signupForm").addEventListener("submit", function(event) {
            let password = document.getElementById("password").value;
            let confirmPassword = document.getElementById("confirm_password").value;
            let errorText = document.getElementById("password-error");

            if (password !== confirmPassword) {
                event.preventDefault();
                errorText.classList.remove("hidden");
            } else {
                errorText.classList.add("hidden");
            }
        });
    </script>
</body>
</html>
