<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventPro - Post Event Requirements</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <style>
        .form-gradient {
            background: linear-gradient(45deg, 
                #FF0000, /* Red */
                #1E90FF, /* Blue */
                #FF69B4  /* Violet-Pink */
            );
            background-size: 400% 400%;
            animation: rainbow 15s ease infinite;
        }
        @keyframes rainbow { 
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-sky-100 via-purple-100 to-pink-100 min-h-screen">
    <!-- Navigation -->
    <nav class="fixed w-full z-50 bg-white/80 backdrop-blur-md">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a href="index.html" class="text-2xl font-bold bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                    EventPro
                </a>
                <div class="flex items-center space-x-6">
                   <a href="/logout" class="bg-gradient-to-r from-blue-500 to-purple-500 hover:from-purple-500 hover:to-pink-500 text-white px-6 py-2 rounded-full transition-all duration-300">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Post Job Section -->
    <div class="container mx-auto px-4 pt-24 pb-16">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl overflow-hidden" data-aos="fade-up">
                <div class="form-gradient p-1">
                    <div class="bg-white rounded-2xl p-8">
                        <h2 class="text-3xl font-bold text-center mb-8 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                            Post Event Requirements
                        </h2>

                        <!-- Event Form -->
<form id="eventForm" class="space-y-6" action="/post_job" method="post">
    <!-- Name Field -->
    <div>
        <label class="block text-gray-700 mb-2">Name</label>
        <input type="text" name="name" required placeholder="Enter your name"
               class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
    </div>

    <!-- Event Title -->
    <div>
        <label class="block text-gray-700 mb-2">Event Title</label>
        <input type="text" name="eventTitle" required placeholder="e.g., Wedding Reception, Corporate Conference"
               class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
    </div>

    <!-- Job Description -->
    <div>
        <label class="block text-gray-700 mb-2">Job Description</label>
        <textarea name="jobDescription" rows="4" required placeholder="Describe the event and requirements in detail"
                  class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all"></textarea>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Payment -->
        <div>
            <label class="block text-gray-700 mb-2">Payment Budget</label>
            <div class="relative">
                <span class="absolute left-3 top-3 text-gray-500">â‚¹</span>
                <input type="number" name="paymentBudget" required min="0" placeholder="Enter amount"
                       class="w-full pl-8 pr-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
            </div>
        </div>

        <!-- Duration -->
        <div>
            <label class="block text-gray-700 mb-2">Event Duration (Hours)</label>
            <input type="number" name="eventDuration" required min="1" placeholder="e.g., 4"
                   class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
        </div>

        <!-- Location -->
        <div>
            <label class="block text-gray-700 mb-2">Event Location</label>
            <input type="text" name="eventLocation" required placeholder="Enter venue address"
                   class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
        </div>

        <!-- Dress Code -->
        <div>
            <label class="block text-gray-700 mb-2">Dress Code</label>
            <select name="dressCode" class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
                <option value="">Select dress code</option>
                <option value="formal">Formal</option>
                <option value="semi-formal">Semi-Formal</option>
                <option value="casual">Casual</option>
                <option value="traditional">Traditional</option>
                <option value="custom">Custom</option>
            </select>
        </div>

        <!-- Age Range -->
        <div>
            <label class="block text-gray-700 mb-2">Age Range</label>
            <div class="flex space-x-4">
                <input type="number" name="minAge" required min="18" placeholder="Min"
                       class="w-1/2 px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
                <input type="number" name="maxAge" required min="18" placeholder="Max"
                       class="w-1/2 px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
            </div>
        </div>

        <!-- Gender Requirements -->
        <div>
            <label class="block text-gray-700 mb-2">Staff Gender Requirements</label>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-gray-600 text-sm mb-1">Male Staff</label>
                    <input type="number" name="maleStaff" min="0" value="0"
                           class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
                </div>
                <div>
                    <label class="block text-gray-600 text-sm mb-1">Female Staff</label>
                    <input type="number" name="femaleStaff" min="0" value="0"
                           class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all">
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Requirements -->
    <div>
        <label class="block text-gray-700 mb-2">Additional Requirements</label>
        <textarea name="additionalRequirements" rows="3" placeholder="Any other specific requirements or notes"
                  class="w-full px-4 py-3 rounded-lg bg-white/50 border border-purple-200 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all"></textarea>
    </div>

    <!-- Submit Button -->
    <button type="submit"
            class="w-full py-3 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 hover:from-purple-500 hover:to-pink-500 text-white font-semibold transition-all duration-300">
        Post Event Requirements
    </button>
</form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
</body>
</html>
